{
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    },
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "files": ["@types/twin.d.ts"],
  "exclude": ["node_modules"],
  "extends": "@meaganewaller/tsconfig",
  "types": ["./src/types"],
  "include": [
    "src",
    "next-env.d.ts",
    "next.config.js",
    "withTwin.js",
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.cjs",
    ".next/types/**/*.ts"
  ]
}
